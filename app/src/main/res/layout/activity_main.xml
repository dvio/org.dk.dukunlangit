<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="?android:windowBackground">

    <!-- Android Version Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAndroid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageAndroid"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/green"/>

            <TextView
                android:id="@+id/textAndroid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageAndroid"
                android:gravity="center"
                android:text="Android Version"
                android:textSize="18sp"
                android:textColor="#000"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Beta Version Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBeta"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBeta"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/purple_500"/>

            <TextView
                android:id="@+id/textBeta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageBeta"
                android:gravity="center"
                android:text="Beta Version"
                android:textSize="18sp"
                android:textColor="#000"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Huawei Version Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHuawei"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageHuawei"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/teal_200"/>

            <TextView
                android:id="@+id/textHuawei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imageHuawei"
                android:gravity="center"
                android:text="Huawei Version"
                android:textSize="18sp"
                android:textColor="#000"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
